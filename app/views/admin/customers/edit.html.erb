<div class="container p-4">
  <div class="row">
    <div class="col">
      <h2 class="mb-4 text-center"><%= @customer.first_name + @customer.last_name %>さんの会員情報編集</h2>
        <div class="d-flex align-items-center pb-3">
        <table class="mt-4">
          <tr>
            <th class="p-2">会員ID</th><!--ここは保存しなくていいのでform_withより上でいいかもですが見にくくなりそうなのでform_withの中に入れました-->
            <td class="pr-5"></td>
            <td class="p-2"><%= @customer.id %></td>
          </tr>
          <tr>
            <th class="p-2">氏名</th>
            <td></td>
            <td class="p-2"><%= @customer.first_name %>　<%= @customer.last_name %></td>
          </tr>
          <tr>
            <th class="p-2">フリガナ</th>
            <td></td>
            <td class="p-2"><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
          </tr>
          <tr>
            <th class="p-2">郵便番号</th>
            <td></td>
            <td class="p-2"><%= @customer.post_code %></td>
          </tr>
          <tr>
            <th class="p-2">住所</th>
            <td></td>
            <td class="p-2"><%= @customer.address %></td>
          </tr>
          <tr>
            <th class="p-2">電話番号</th>
            <td></td>
            <td class="p-2"><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th class="p-2">メールアドレス</th>
            <td></td>
            <td class="p-2"><%= @customer.email %></td>
          </tr>
          <tr>
          <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
            <th class="p-2">会員ステータス</th><!--ボタンで選択式-->
            <td></td>
            <th class="p-2"><%= f.radio_button :is_active, "true" %>有効</th>
            <th class="p-2"><%= f.radio_button :is_active, "false" %>退会</th>
          </tr>
          <tr>
            <th class="p-2"></th>
            <td></td>
            <th class="p-2"><%= f.submit "変更を保存", class: "btn btn-success" %></th>
          </tr>
        </table>
        </div>
        <% end %>
    </div>
  </div>
</div>
