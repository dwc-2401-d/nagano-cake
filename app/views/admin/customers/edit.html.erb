<div class="container">
  <div class="row">
    <div class="col mt-4">
      <h2><%= @customer.first_name + @customer.last_name %>さんの会員情報編集</h2>
        <table class="mt-4">
          <tr>
            <th>会員ID</th><!--ここは保存しなくていいのでform_withより上でいいかもですが見にくくなりそうなのでform_withの中に入れました-->
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <th>氏名</th>
            <th><%= @customer.first_name %></th>
            <th><%= @customer.last_name %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= @customer.first_name_kana %></th>
            <th><%= @customer.last_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th><%= @customer.post_code %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= @customer.telephone_number %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @customer.email %></th>
          </tr>
          <tr>
          <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
            <th>会員ステータス</th><!--ボタンで選択式-->
            <th><%= f.radio_button :is_active, "true" %>有効</th>
            <th><%= f.radio_button :is_active, "false" %>退会</th>
          </tr>
        </table>
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
