<h2><%= @customer.first_name + @customer.last_name %>さんの会員詳細</h2>
<table>
  <tr>
    <th>会員ID</th>
    <th><%= @customer.id %></th>
  </tr>
  <tr>
    <th>氏名</th>
    <th><%= @customer.first_name %>　<%= @customer.last_name %></th>
  </tr>
  <tr>
    <th>フリガナ</th>
    <th><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></th>
  </tr>
  <tr>
    <th>郵便番号</th>
    <th><%= @customer.post_code %></th>
  </tr>
  <tr>
    <th>住所</th>
    <th><%= @customer.address %></th>
  </tr>
  <tr>
    <th>電話番号</th>
    <th><%= @customer.telephone_number %></th>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <th><%= @customer.email %></th>
  </tr>
  <tr>
    <th>会員ステータス</th>
  <% if @customer.is_active == true %>
    <th>有効</th>
  <% else %>
    <th>退会</th>
  <% end %>
  </tr>
</table>
<%= link_to "編集する", edit_admin_customer_path(@customer) %>
