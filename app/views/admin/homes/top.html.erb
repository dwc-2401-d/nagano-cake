<div class="container p-4">
  <div class="row">
    <div class="col">
      <h2 class="mb-4 text-center">注文履歴一覧</h2>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tboby>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order.id) %></td>
            <td><%= order.name %></td>
            <!--order_details内の各order_detailのamountが合計される-->
            <% total_amount = order.order_details.sum{|item| item.amount} %>
            <td><%= total_amount %></td>
            <td><%= order.status_i18n %></td>
          </tr>
        <% end %>
        </tboby>
      </table>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center">
    <%= paginate @orders %>
</div>