<div class="container">
  <div class="row">
    <div class="col">
      <h5>注文履歴一覧</h5>
      <table class="table bg-light">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tboby>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
            <td><%= order.name %></td>
            <!--order_details内の各order_detailのamountが合計される-->
            <% total_amount = order.order_details.sum{|item| item.amount} %>
            <td><%= total_amount %></td>
            <td><%= order.status_i18n %></td>
          </tr>
        <% end %>
        </tboby>
      </table>
      <!--ページネーション-->
    </div>
  </div>
</div>
