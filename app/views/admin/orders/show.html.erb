<div class="container">
  <div class="row">
    <div class="col">
      <h5>注文履歴詳細</h5>
      <table>
        <tr>
          <th>購入者</th>
          <th></th>
        </tr>
        <tr>
          <th>注文日</th>
          <th></th>
        </tr>
        <tr>
          <th>配送先</th>
          <th></th>
        </tr>
        <tr>
          <th>支払方法</th>
          <th></th>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <th></th>
          <th></th>
        </tr>
      </table>
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
            <th></th><!--空白用のタグです-->
          </tr>
        </thead>
        <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price * order_detail.amount %></td>
          <%= form_with model: order_detail, url:, method: :patch do |f| %>
            <td><%= f.select :making_status, %></td>
            <td><%= f.submit "更新" %></td>
          <% end %><!--form_withのend-->
          </tr>
        <% end %><!--eachのend-->
        </tbody>
      </table>
      <table>
        <tr>
          <th>商品合計</th>
          <th></th>
        </tr>
        <tr>
          <th>送料</th>
          <th></th>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <th></th>
        </tr>
      </table>
    </div>
  </div>
</div>
