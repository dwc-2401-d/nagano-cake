<div class='container'>
  <div class='row'>
    <div class='col-lg-12 mt-4'>
      <h3 class="text-center mb-3" style="font-weight: bold; color: #a07b35; font-family: serif; ">商品一覧</h3>
      <%= link_to new_admin_item_path do %>
        <button type="button" class="btn btn-outline-secondary"><i class="fa-solid fa-plus"></i> 新規登録</button>
      <% end %>
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td>¥<%= item.price %></td>
            <td><%= item.genre.name %></td>
          <% if item.is_active == true %><!--itemのステータスが有効の時-->
            <td class="text-success">販売中</td>
          <% else %><!--それ以外-->
            <td class="secondary">販売停止中</td>
          <% end %><!--ifのend-->
          </tr>
        <% end %><!--doのend-->
        </tbody>
      </table>
    </div>
  </div>
</div>
