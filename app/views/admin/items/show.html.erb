<div class="container p-4">
  <div class="row">
    <div class="col">
      <h2 class="mb-4 text-center">商品詳細</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <%= image_tag @item.item_image, size: "300x200" %>
    </div>
    <div class="col-lg-8">
      <table class="table table-borderless">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格（税抜価格）</th>
          <td>¥<%= (@item.price * 1.1).floor %> ( ¥<%= @item.price %> )</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <% if @item.is_active == true %><!--itemのステータスが有効の時-->
            <th class="text-success">販売中</th>
          <% else %><!--それ以外-->
            <th class="text-secondary">販売停止中</th>
          <% end %>
        </tr>
        <tr>
          <th></th>
          <th><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success",style: "width:150px;" %></th>
        </tr>
      </table>
    </div>
  </div>
</div>
