<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-4">
      <h2>商品詳細</h2>
    </div>
    <div class="row">
      <div class="col-lg-4">
        <%= image_tag @item.item_image, size: "300x300" %>
      </div>
    </div>
    <div class="col-lg-8">
      <table>
        <tr>
          <th>商品名</th>
          <th><%= @item.name %></th>
        </tr>
        <tr>
          <th>商品説明</th>
          <th><%= @item.introduction %></th>
        </tr>
        <tr>
          <th>ジャンル</th>
          <th><%= @item.genre.name %></th>
        </tr>
        <tr>
          <th>税込価格（税抜価格）</th>
          <th>¥<%= (@item.price * 1.1).floor %> ( ¥<%= @item.price %> )</th>
        </tr>
        <tr>
          <th>販売ステータス</th>
        <% if @item.is_active == true %><!--itemのステータスが有効の時-->
          <th class="text-success">販売中</th>
        <% else %><!--それ以外-->
          <th class="text-secondary">販売停止中</th>
        <% end %>
        </tr>
        <tr>
          <th></th>
          <th><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %></th>
        </tr>
      </table>
    </div>
  </div>
</div>
