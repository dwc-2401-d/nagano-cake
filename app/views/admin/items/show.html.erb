<div class='container'>
  <div class='row'>
    <div class='col-lg-4'>
      <h3>商品詳細</h3>
      <%= image_tag @item.item_image, size: "350x200" %>
    </div>
    <div class='col-lg-8'>
      <table>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格（税抜価格）</td>
          <td><%= @item.price * 1.1 %> ( <%= @item.price %> )円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
        <% if @item.is_active == true %><!--itemのステータスが有効の時-->
          <td>販売中</td>
        <% else %><!--それ以外-->
          <td>販売停止中</td>
        <% end %>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>