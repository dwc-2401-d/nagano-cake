<div class="container p-4">
  <div class="row">
    <div class="col-8 mx-auto">
      <h2 class="mb-4 text-center">商品編集</h2>
      <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
      <table class="mt-4">
        <tr>
          <th class="p-1"><%= f.label "商品画像" %></th>
          <td></td>
          <td class="p-2"><%= f.file_field :item_image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th class="p-1"><%= f.label "商品名" %></th>
          <td></td>
          <td class="p-2"><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th class="p-1"><%= f.label "商品説明" %></th>
          <td></td>
          <td class="p-2"><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <th class="p-1"><%= f.label "ジャンル" %></th>
          <td></td>
          <td class="p-2"><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
        </tr>
        <tr>
          <th class="p-1"><%= f.label "税抜価格" %></th>
          <td></td>
          <td class="p-2"><%= f.text_field :price %> 円</td>
        </tr>
        <tr>
          <th class="p-1"><%= f.label "販売ステータス" %></th>
          <td></td>
          <td class="p-2">
            <%= f.radio_button :is_active, "true" %>販売中
            <span class="pl-5"><%= f.radio_button :is_active, "false" %>販売停止中</span>
          </td>
        </tr>
        <tr>
          <th class="p-1"></th>
          <td></td>
          <td class="p-2"><%= f.submit "変更を保存", class: "btn btn-success",style: "width:150px;" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
