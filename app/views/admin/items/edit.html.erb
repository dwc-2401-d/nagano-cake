<div class='container'>
  <div class='row'>
    <div class='col'>
      <h3>商品編集</h3>
      <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
      <table>
        <tr>
          <td><%= f.label "商品画像" %></td>
          <td><%= f.file_field :item_image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td><%= f.label "商品名" %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label "商品説明" %></td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td><%= f.label "ジャンル" %></td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
        </tr>
        <tr>
          <td><%= f.label "税抜価格" %></td>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <td><%= f.label "販売ステータス" %></td>
          <td><%= f.radio_button :is_active, "true" %>販売中</td>
          <td><%= f.radio_button :is_active, "false" %>販売停止中</td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
