<h3>ログイン</h3>

      <h4>会員の方はこちらからログイン</h4>

     <%= form_with model: @customer, url: customer_session_path do |f| %>

   <div>
      <div><h4><%= f.label :email, "メールアドレス" %></h4></div>
      <div><h4><%= f.email_field :email, autofocus: true, autocomplete: "email" %></h4></div>
   </div>
    <div>
      <div><h4><%= f.label :password, "パスワード" %></h4></div>
      <div><h4><%= f.password_field :password, autocomplete: "current-password" %></h4></div>
    </div>
       <div>
   <%= f.submit "ログイン" %></div>
      </div>
       <% end %>
  <div>
      <h4>会員登録がお済みでない方</h4>
   </div>
   <div>
   <h4><%= render "public/shared/links" %>から新規登録を行ってください。</h4>
     </div>