<div class='container'>
  <div class='row'>
    <div class='col'>
      <h3>配送先登録／一覧</h3>
      <%= form_with model: @address, url: public_addresses_path, method: :post do |f| %>
      <table>
        <tr>
          <td>郵便番号（ハイフンなし）</td>
          <td><%= f.text_field :post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name %></td><%= f.submit "新規登録", class:"btn btn-success" %>
        </tr>
      </table>
      <% end %>
      <table>
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @addreses.each do |address| %>
          <tr>
            <td><%= address.post_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><%= link_to "編集する", edit_public_address_path, class: "btn btn-primary" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>