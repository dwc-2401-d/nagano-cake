<div class='container'>
  <div class='row'>
    <div class='col'>
      <h3>配送先編集</h3>
      <%= form_with model: @address, url: public_address_path(@address), method: :patch do |f| %>
      <table>
        <tr>
          <td>郵便番号（ハイフンなし）</td>
          <td><%= f.text_field :post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name %></td><%= f.submit "変更内容を保存", class:"btn btn-success" %>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>