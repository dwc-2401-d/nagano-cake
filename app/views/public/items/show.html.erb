<div class="container p-4">
  <div class="row">
    <div class="col">
      <div class="row text-center text-xs-center text-sm-left text-md-left mt-5">
        <div class="col-md-5 offset-md-1 pl-5">
          <%= image_tag @item.item_image, size: "330x220" %>
        </div>
        
        <h3><%= @item.name %></h3>
        <h5><%= @item.introduction %></h5>
        <% if @item.is_active == true %>
          <div>¥<%= @item.with_tax_price.to_s(:dalimited) %>(税込)</div>
          <div>
            <%= form_with model: @cart_item, url: public_cart_items_path, method: :post do |f| %>
              <%= f.hidden_field :item_id, :value => @item.id %>
              <%= f.select :amount, *[1..10] %>
              <%= f.submit 'カートに入れる', class: "btn btn-success" %>
            <% end %>
          </div>
        <% else %>
          <p>販売停止中</p>
        <% end %>
      </div>
    </div>
  </div>
</div>