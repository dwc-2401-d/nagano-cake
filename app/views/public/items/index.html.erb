<div class="container p-4">
  <div class="row">
    <div class="col">
      <h3 class="mb-4">商品一覧(全<%= @items.count %>件)</h3>
        <% @items.each do |item| %>
        <div class="col-sm-3">
          <%= link_to public_item_path(item.id) do %>
            <%= image_tag item.item_image, size: "150x100" %>
          <% end %>
          <div class="mt-3 text-left">
            <%= item.name %>
            <% if item.is_active %>
              ¥<%= item.price %>
            <% else %>
              販売停止中
            <% end %>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>