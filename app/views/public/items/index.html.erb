<div class="container p-4">
  <div class="row p-4">
    <div class="col-md-3">
      <div class="row-mt-2">
        <%= render 'public/searches/genre_search', genres: @genres %>
      </div>
    </div>
    <div class="col-md-8">
      <h2 class="mb-4 text-center">商品一覧(全<%= @items.count %>件)</h2>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-4">
            <div class="aspect-ratio-box">
              <%= link_to public_item_path(item.id) do %>
                <%= image_tag item.item_image, size: "150x100" %>
              <% end %>
            </div>
            <div class="mt-3 text-left">
              <b><%= item.name %></b>
              <% if item.is_active %>
                <br>
                ¥<%= number_with_delimiter(item.price) %>
              <% else %>
                <p class="text-danger">販売停止中</p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center">
  <%= paginate @items %>
</div>