<div class="container p-4">
  <div class="row p-4">
    <div class="col-md-3">
      <div class="row-mt-2">
        <%= render 'public/searches/genre_search' %>
      </div>
    </div>
    <div class="col-md-8">
      <h2 class="mb-4 text-center">Item search for "<%= @word %>"</h2>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-4">
            <div class="aspect-ratio-box">
              <%= link_to public_item_path(item.id) do %>
                <%= image_tag item.item_image, size: "150x100" %>
              <% end %>
            </div>
            <div class="mt-3 text-left">
              <b><%= item.name %></b>
              <% if item.is_active == true %><!--trueの場合、金額を表示-->
                <br>
                ¥<%= item.price %>
              <% else %> <!--flaseの場合、金額を表示せず販売停止中が表示-->
                <p class="text-danger">販売停止中</p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <div style="position: relative; top: -20px; text-align: right;">
        <%= link_to "全ての商品をみる▶", public_items_path %></div>
    </div>
  </div>
</div>