<h2>ショッピングカート</h2>
<h5><%= link_to "カートを空にする", destroy_all_public_cart_items_path, method: :delete %></h5>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.item_image, size: "50x50" %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
    <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id), method: :patch do |f| %>
      <td><%= f.select :amount, *[1..10], include_blank: "個数選択" %><%= f.submit "変更" %></td>
    <% end %>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "買い物を続ける", root_path %>
<table>
  <tr>合計金額</tr>
<% @cart_items.each do |cart_item| %>
  <% @total_price += cart_item.subtotal %>
<% end %>
  <tr><%= @total_price %></tr>
</table>
