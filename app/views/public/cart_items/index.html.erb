<h2>ショッピングカート</h2>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item_image, size: "50x50" %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.price * 1.1 %></td>
      <td><!--数量選択--></td>
      <td><%= cart_item.item.price * 1.1 %></td><!--数量をかけます-->
      <td><%= link_to "削除する", public_cart_item_destroy_path(cart_item.id), method: :destroy %></td>
    </tr>
  <% end %>
  </tbody>
</table>
