<h2>ショッピングカート</h2>
<h5><%= link_to "カートを空にする", destroy_all_public_cart_items_path, method: :delete %></h5>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
<!--非同期用にidを付与-->
    <tr id="cart_item_<%= cart_item.id %>">
      <td><%= image_tag cart_item.item.item_image, size: "50x50" %><%= cart_item.item.name %></td>
<!--3桁ごとにコンマをつける処理-->
      <td>¥<%= number_with_delimiter(cart_item.item.with_tax_price) %></td>
      <td id="select-form">
      <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id), method: :patch, local: false do |f| %>
<!--item_idキーに対してcart_item_item_idという値をブラウザに表示せずデータベースへ送信-->
        <%= f.hidden_field :item_id, value: cart_item.item.id %>
<!--個数選択のセレクトボックスを作成-->
        <%= f.select :amount, *[1..10], include_blank: "個数選択" %><%#= f.submit "変更" %>
    <% end %>
      </td>
      <td class="subtotal-area"><%= render "public/cart_items/subtotal", cart_item: cart_item %></td>
      <td><%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "買い物を続ける", root_path %>
<table>
  <tr>
    <td>合計金額</td>
    <td id="total-area"><%= render "public/cart_items/total", cart_items: @cart_items %></td>
  </tr>
</table>

<%= link_to "情報入力に進む", new_public_order_path %>
<!--変更ボタンを押さなくてもselectで個数を変更すると自動で更新がされるコード-->
<script>
  $(document).on("change", "#select-form select", function() {
    let form = $(this).closest("form");
    let url = form.attr("action");
    let method = form.attr("method");
    let data = form.serialize();

    $.ajax({
      url: url,
      method: method,
      data: data,
      success: function(response) {
        let cartItemRow = form.closest("tr#cart_item");
        cartItemRow.find(".subtotal-area").html(response);
      },
      error: function(xhr) {
        console.log(xhr.responseText);
      }
    });
  });
</script>