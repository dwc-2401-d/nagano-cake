<div class="container p-4">
  <div class="row">
    <div class="col">
      <h3 class="mb-4">新規会員登録</h3>
        <%= form_with(model: @customer, url: customer_registration_path, method: :post) do |f| %>
        <%= render "public/shared/error_messages", resource: @customer %>
        <table>
          <tbody>
            <tr>
              <td class="p-1">名前</td>
              <td class="p-1"><%= f.label :first_name, "(姓)" %></td>
              <td><%= f.text_field :first_name %></td>
              <td class="pl-4"><%= f.label :last_name, "(名)" %></td>
              <td><%= f.text_field :last_name %></td>
            </tr>
            <tr>
              <td class="p-1">フリガナ</td>
              <td class="p-1"><%= f.label :first_name, "(セイ)" %></td>
              <td><%= f.text_field :first_name_kana %></td>
              <td class="pl-4"><%= f.label :last_name, "(メイ)" %></td>
              <td><%= f.text_field :last_name_kana %></td>
            </tr>
            <tr>
              <td class="p-1">メールアドレス</td>
              <td></td>
              <td class="p-1"><%= f.email_field :email %></td>
            </tr>
            <tr>
              <td class="p-1">郵便番号(ハイフンなし)</td>
              <td></td>
              <td class="p-1"><%= f.text_field :post_code %></td>
            </tr>
            <tr>
              <td class="p-1">住所</td>
              <td></td>
              <td colspan="3", class="p-1"><%= f.text_field :address, size:"60" %></td>
            </tr>
            <tr>
              <td class="p-1">電話番号(ハイフンなし)</td>
              <td></td>
              <td class="p-1"><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
              <td class="p-1">パスワード(6文字以上)</td>
              <td></td>
              <td class="p-1"><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td class="p-1">パスワード(確認用)</td>
              <td></td>
              <td class="p-1"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td class="p-4"><%= f.submit "新規登録", class:"btn btn-success", style: "width: 150px;" %></td>
            </tr>
          </tbody>
        </table>
        <% end %>
        <div>
          <h3 class="mt-4">既に登録済みの方</h3>
          <%= render "public/shared/links" %> からログインしてください。
        </div>
    </div>
  </div>
</div>