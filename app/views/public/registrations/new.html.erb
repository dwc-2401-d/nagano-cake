<h3>新規会員登録</h3>

<%= form_with(model: @customer, url: customer_registration_path, method: :post) do |form| %>
<%= render "public/shared/error_messages", resource: @customer %>

<div>
  <%= form.label :first_name, "名前" %>
</div>
<div>（姓）</div>
<div><%= form.text_field :first_name %></div>
<div><%= form.label :last_name, "（名）" %></div>
<!--<div><= form.text_field :last_name %></div>-->
<%= form.text_field :last_name %>

<div>
  <div><%= form.label :first_name_kana, "フリガナ" %></div>
  <div>（セイ）</div>
  <div><%= form.text_field :first_name_kana %></div>
  <div><%= form.label :last_name_kana, "（メイ）" %></div>
  <div><%= form.text_field :last_name_kana %></div>
</div>

<div>
  <div><%= form.label :email, "メールアドレス" %></div>
  <div><%= form.email_field :email %></div>
</div>

<div>
  <div><%= form.label :post_cade, "郵便番号(ハイフンなし)" %></div>
  <div><%= form.text_field :post_cade %></div>
</div>

<div>
  <div><%= form.label :address, "住所" %></div>
  <div><%= form.text_field :address %></div>
</div>

<div>
  <div><%= form.label :telephone_number, "電話番号(ハイフンなし)" %></div>
  <div><%= form.text_field :telephone_number %></div>
  <div></div>
</div>

<div>
  <div><%= form.label :password, "パスワード(6文字以上)" %></div>
  <div><%= form.password_field :password, autocomplete: "new-password" %></div>
</div>

<div>
  <div><%= form.label :password_confirmation, "パスワード(確認用)" %></div>
  <div><%= form.password_field :password_confirmation, autocomplete: "new-password" %></div>
</div>

<div>
  <%= form.submit "新規登録" %>
</div>

<% end %>

<div>
<h3>既に登録済みの方</h3>

<div><h5><%= render "public/shared/links" %> からログインしてください。</h5></div>
</div>