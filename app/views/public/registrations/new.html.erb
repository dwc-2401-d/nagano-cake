<div class='container'>
  <div class='row'>
    <div class='col'>
      <h3>新規会員登録</h3>
        <%= form_with(model: @customer, url: customer_registration_path, method: :post) do |form| %>
        <%= render "public/shared/error_messages", resource: @customer %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>名前</td>
              <td>（姓）<%= form.text_field :first_name %></td>
              <td>（名）<%= form.text_field :last_name %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td>（セイ）<%= form.text_field :first_name_kana %></td>
              <td>（メイ）<%= form.text_field :last_name_kana %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= form.email_field :email %></td>
            </tr>
            <tr>
              <td>郵便番号(ハイフンなし)</td>
              <td><%= form.text_field :post_cade %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= form.text_field :address %></td>
            </tr>
            <tr>
              <td>電話番号(ハイフンなし)</td>
              <td><%= form.text_field :telephone_number %></td>
            </tr>
            <tr>
              <td>パスワード(6文字以上)</td>
              <td><%= form.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td>パスワード(確認用)</td>
              <td><%= form.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= form.submit "新規登録", class:"btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
        <% end %>
        <div>
          <h4>既に登録済みの方</h4>
          <div><%= render "public/shared/links" %> からログインしてください。</div>
        </div>
    </div>
  </div>
</div>