<div class="container p-4">
  <div class="row">
    <div class="col-10 mx-auto mb-4">
      <h2 class="mb-4 text-center">マイページ</h2>
        <div class="d-flex align-items-center pb-3">
          <strong style="font-size: 20px;">登録情報</strong>
          <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success ml-5", style: "width: 150px;" %>
        </div>
        <table class="table table-borderless">
          <tr>
            <td class="bg-light col-lg-2">氏名</td>
            <td><%= @customer.first_name %>　<%= @customer.last_name %></td>
          </tr>
          <tr>
            <td class="bg-light col-lg-2">カナ</td>
            <td><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
          </tr>
          <tr>
            <td class="bg-light col-lg-2">郵便番号</td>
            <td><%= @customer.post_code %></td>
          </tr>
          <tr>
            <td class="bg-light col-lg-2">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="bg-light col-lg-2">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td class="bg-light col-lg-2">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>

      <div class="d-flex align-items-center pt-5 pb-4">
        <strong style="font-size: 20px;">配送先</strong>
        <%= link_to "一覧を見る", public_addresses_path, class: "btn btn-primary ml-5", style: "width: 150px;" %>
      </div>
      <div class="d-flex align-items-center pt-2">
        <strong style="font-size: 20px;">注文履歴</strong>
        <%= link_to "一覧を見る", public_orders_path, class: "btn btn-primary ml-4", style: "width: 150px;" %>
      </div>
    </div>
  </div>
</div>